<Window x:Class="CrossSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossSim"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="350" MinWidth="525"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" d:DesignWidth="607" d:DesignHeight="355">
    <Grid x:Name="MainGrid">
        <!-- Grid used for drawing simulator -->
        <Border BorderThickness="1" Margin="5, 30, 5, 5">
            <Grid x:Name="SimGrid" Background="#FFD4D4D4" MouseLeftButtonDown="SimGrid_MouseLeftButtonDown"/>
        </Border>

        <!-- Toolbar -->
        <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal" VerticalAlignment="Top" Margin="5, 5, 5, 0">
            <!-- Pause/Play button -->
            <ToggleButton x:Name="PausePlayButton" Margin="5,4,5,0" FontFamily="Segoe MDL2 Assets" Content="&#xE769;" Background="{x:Null}" VerticalAlignment="Top"/>
            
            <!-- Color selection tool-->
            <Expander Header="Color" Margin="5,0,5,0" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical">
                    <xctk:ColorCanvas x:Name="MaterialColorPicker" UsingAlphaChannel="False" SelectedColor="Red"/>
                </StackPanel>
            </Expander>
            
            <!-- Velocity -->
            <Expander Header="Velocity">
                <Grid Height="100" MaxWidth="200">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition MinWidth="25"/>
                    </Grid.ColumnDefinitions>
                    
                    <Slider x:Name="YVelocitySlider" ValueChanged="FormatVelocityDisplay" Orientation="Vertical" Minimum="-50" Maximum="50" Grid.RowSpan="3" Grid.Column="3" Grid.Row="0" Value="0"/>
                    <Slider x:Name="XVelocitySlider" ValueChanged="FormatVelocityDisplay" Orientation="Horizontal" Minimum="-50" Maximum="50" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="3" Value="0"/>
                    <Label x:Name="VelocityLabel" Grid.Row="3" Grid.Column="3" Content="(0, 0)"/>
                    
                    <Border Grid.RowSpan="3" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="Black" Background="#7FA9A9A9"/>
                    <Ellipse x:Name="VelocityDisplayBall" Fill="Red" Width="25" Height="25" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
                    <Line x:Name="VelocityArrow" Grid.RowSpan="3" Grid.ColumnSpan="3" X1="37.5" Y1="37.5" X2="37.5" Y2="37.5" Stroke="Red" StrokeThickness="5" StrokeEndLineCap="Round"/>
                </Grid>
            </Expander>
            
        </StackPanel>
        <!-- End of toolbar -->
        
        <!-- Console -->
        <Expander VerticalAlignment="Bottom" ExpandDirection="Up" Margin="10, 35, 10, 10" BorderBrush="DarkGray" BorderThickness="1">
            <ScrollViewer>
                <TextBox x:Name="ConsoleTextBox" Background="{x:Null}" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="True"/>
            </ScrollViewer>
        </Expander>
        
        <!-- FPS Display -->
        <Label x:Name="FPSLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 3"/>
    </Grid>
</Window>
